<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="柱状图使用示例"
            android:gravity="center"
            android:textSize="25sp"
            />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="简单柱状图"
            android:onClick="simpleColumn"
            />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="一堆堆的柱状图"
            android:onClick="heapColumn"
            />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="成绩-人数的柱状图"
            android:onClick="scoreColumn"
            />

    <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="三个班级各阶段对比成绩的柱状图"
            android:onClick="scoreHeapColumn"
            />
</LinearLayout>

